set nocompatible
set nobackup
set noundofile
set number
set cursorline
set laststatus=2
set statusline=%F%m%r%h%w\ [%{&ff}]\ [%{&fileencoding}]\ [%Y]\%=[\0x%02.2B]\ [%l,%v][%p%%]
set ruler
set expandtab
set softtabstop=2
set tabstop=2
set shiftwidth=2
set incsearch
set hlsearch
set list
set encoding=utf-8
set iminsert=0
set imsearch=-1
syntax enable
filetype plugin indent on
